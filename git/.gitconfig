# WARNING: do not edit this file directly. Modify ~/.host_gitconfig instead
[user]
    email = noreply@hclimente.eu
    name  = Héctor Climente-González

[include]
    path = ~/.host_gitconfig.toml

[color]
    ui = auto

[core]
	excludesfile = ~/.gitignore
	pager = delta

[push]
	default = current

[pull]
    rebase = false

[init]
	defaultBranch = main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[credential]
	helper = cache

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true

[merge]
	conflictStyle = zdiff3
[gpg]
	format = ssh
[user]
	signingkey = /Users/hecg/.ssh/id_ed25519_sk.pub
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
	program = /opt/homebrew/bin/ssh-keygen
[commit]
	gpgsign = true
