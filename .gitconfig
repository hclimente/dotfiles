[user]
	email = hclimente@gmail.com
	name = Héctor Climente-González

[color]
  ui = auto

[core]
	excludesfile = ~/.gitignore
	pager = delta

[push]
	default = simple

[pull]
    rebase = false
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = cache
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
[merge]
	conflictStyle = zdiff3
